{
	"name": "safesecur-root",
	"version": "1.0.0",
	"description": "SAFESECUR",
	"private": true,
	"workspaces": [
		"frontend",
		"server"
	],
	"scripts": {
		"start": "concurrently \"npm run server\" \"npm run client\"",
		"server": "cd server && npm start",
		"client": "cd frontend && npm run dev",
		"install:all": "npm install",
		"build": "cd frontend && npm run build"
	},
	"devDependencies": {
		"concurrently": "^8.2.2"
	}
}
